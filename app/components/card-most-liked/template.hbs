<div
  class="flex flex-col overflow-hidden shadow-lg bg-gray-100 rounded"
  data-test-card-most-liked
  ...attributes
>
  <AspectRatio @ratio="1:1">
    <img
      src={{@src}}
      alt={{@title}}
      class="absolute object-cover w-full h-full"
      data-test-card-most-liked="img">
  </AspectRatio>

  <div class="px-6 py-4 flex justify-between flex-col flex-1">
    <div>
      <h2
        class="text-lg md:text-xl lg:text-2xl text-gray-700 uppercase mb-2"
        data-test-card-most-liked="title"
      >
        {{@title}}
      </h2>
      <p class="text-gray-700 text-base" data-test-card-most-liked="description">
        {{@description}}
      </p>
    </div>
    <footer class="flex justify-between items-end border-t-2 pt-4 mt-4">
      <small class="text-gray-500" data-test-card-most-liked="date">
        {{@date}}
      </small>
      <a
        href={{@href}}
        target="blank"
        class="flex items-center bg-gray-800 hover:bg-gray-800 border border-gray-700 text-gray-500 lg:text-lg py-2 px-4 rounded inline-block"
        data-test-card-most-liked="link"
      >
        <FaIcon @icon="eye" class="text-inherit mr-2" />
        {{t "cardMostLiked.seePost"}}
      </a>
    </footer>
  </div>
</div>