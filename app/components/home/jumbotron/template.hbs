<section class="jumbotron py-16 lg:py-24" data-test-jumbotron>
  <div class="container px-4 md:px-6 min-h-halfscreen flex flex-col landscape:flex-row">
    <div class="flex items-center justify-center flex-1 landscape:order-2">
      <Home::Neon data-test-jumbotron="neon" />
    </div>
    <div class="text-white font-thin landscape:self-end landscape:flex-1 landscape:order-1">
      <h1
        class="text-3xl md:text-4xl lg:text-6xl landscape:text-3xl uppercase mb-4"
        data-test-jumbotron="title"
      >
        {{t "jumbotron.title" htmlSafe=true}}
      </h1>
      <h2
        class="text-xl md:text-2xl lg:text-3xl text-gray-500 mb-8"
        data-test-jumbotron="subtitle"
      >
        {{t "jumbotron.subtitle"}}
      </h2>
      <div>
        <span class="text-sm text-gray-600 mb-1 block">{{t "jumbotron.follow"}}</span>
        <div class="flex">
          <a
            href="https://www.instagram.com/sharedtattoo/"
            target="blank"
            class="bg-transparent hover:bg-gray-800 border border-gray-700 text-gray-500 lg:text-lg py-4 px-8 rounded"
            data-test-jumbotron="instagram-link"
          >
            {{t "jumbotron.instagram"}}
          </a>
          <a
            href="https://www.facebook.com/sharedtattoo/"
            target="blank"
            class="bg-transparent hover:bg-gray-800 border border-gray-700 text-gray-500 lg:text-lg py-4 px-8 rounded ml-2"
            data-test-jumbotron="facebook-link"
          >
            {{t "jumbotron.facebook"}}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>