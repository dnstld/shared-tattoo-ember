<div
  class="card-most-liked overflow-hidden shadow-lg bg-gray-100 rounded"
  data-test-card-most-liked
  ...attributes
>
  <div
    class="card-most-liked_img"
    style="background-image: url({{@src}});"
    role="img"
    aria-label={{@alt}}
    data-test-card-most-liked="img"
  ></div>

  <div class="px-6 py-4">
    <h2
      class="text-lg md:text-xl lg:text-2xl text-gray-700 uppercase mb-2"
      data-test-card-most-liked="year"
    >
      {{@year}}
    </h2>
    <p class="text-gray-700 text-base" data-test-card-most-liked="description">
      {{@description}}
    </p>
    <hr class="my-4">
    <footer class="flex justify-between items-end">
      <small class="text-gray-500" data-test-card-most-liked="date">
        {{@date}}
      </small>
      <a
        href={{@href}}
        target="blank"
        class="bg-gray-800 hover:bg-gray-800 border border-gray-700 text-gray-500 lg:text-lg py-2 px-4 rounded inline-block"
        data-test-card-most-liked="link"
      >
        <FaIcon @icon="eye" class="text-inherit mr-2" />
        See post
      </a>
    </footer>
  </div>
</div>