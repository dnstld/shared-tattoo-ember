<header class="bg-gray-900 h-16 px-4 md:px-6 flex items-center fixed w-screen shadow-lg">
  <div class="flex items-center flex-1">
    <img src="assets/images/shared-tattoo-logo.svg" class="h-10" alt="Shared Tattoo">
    <h1 class="text-white uppercase text-sm md:text-base lg:text-lg xl:text-xl ml-2">Shared Tattoo</h1>
  </div>
  <a
    href="https://www.instagram.com/sharedtattoo/"
    target="blank"
    class="bg-transparent hover:bg-gray-800 border border-gray-700 text-gray-500 py-2 px-4 rounded"
  >
    <FaIcon @icon="hashtag" /> instagram
  </a>
